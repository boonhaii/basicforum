<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<h2> Comments </h2>
<%= render @post.comments %>

<h2>Add a comment: </h2>
<%= form_with model: [@post, @post.comments.build] do |f| %>
  <p>
    <%= f.label :commenter %>
    <%= f.text_field :commenter %><br />
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %><br />
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
